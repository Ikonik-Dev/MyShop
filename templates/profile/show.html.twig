{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container pt-5 mt-5">
		<h1>Utilisateur</h1>

		<table class="table">
			<tbody>
				{# <tr>
				                <th>Id</th>
				                <td>{{ user.id }}</td>
				            </tr> #}
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>fullname</th>
					<td>{{ user.fullname }}</td>
				</tr>
				<tr>
					<th>street</th>
					<td>{{ user.street }}</td>
				</tr>
				<tr>
					<th>code postal</th>
					<td>{{ user.zipcode }}</td>
				</tr>
				<tr>
					<th>ville</th>
					<td>{{ user.city }}</td>
				</tr>
				<tr>
					<th>pays</th>
					<td>{{ user.country }}</td>
				</tr>
				<tr>
					<th>IsVerified</th>
					<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_profile_edit') }}"><button class='btn btn-info'>editer</button> </a>

		{{ include('profile/_delete_form.html.twig') }}
	</div>
{% endblock %}
